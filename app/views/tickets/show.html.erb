<div id="ticket">
	<div class="page-header">
		<h1><%= @project.name %></h1>
	</div>

	<div class="page-header">
		<h2><%= @ticket.name %></h2>

    <ul class="actions">
      <li><%= link_to fa_icon("pencil") + " Edit Ticket", [:edit, @project, @ticket],
        class: "btn btn-primary" %></li>
      </li><%= link_to fa_icon("trash") + " Delete Ticket", [@project, @ticket], method: :delete,
        data: { confirm: "Are you sure you want to delete this ticket?" }, class: "btn btn-danger" %></li>
    </ul>
	</div>

	<%= simple_format(@ticket.description) %>
</div>